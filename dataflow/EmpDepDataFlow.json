{
	"name": "EmpDepDataFlow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "empDataDataset",
						"type": "DatasetReference"
					},
					"name": "EmployeeData100"
				},
				{
					"dataset": {
						"referenceName": "depDataDataset100",
						"type": "DatasetReference"
					},
					"name": "DepData100"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_OutputData",
						"type": "DatasetReference"
					},
					"name": "OutputData"
				}
			],
			"transformations": [
				{
					"name": "joinEmpDataDepData"
				},
				{
					"name": "ModifyColumns1",
					"description": "Autogenerated by data preview actions"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empId as string,",
				"          name as string,",
				"          Country as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> EmployeeData100",
				"source(output(",
				"          depid as string,",
				"          depname as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> DepData100",
				"ModifyColumns1, DepData100 join(department == depid,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> joinEmpDataDepData",
				"EmployeeData100 derive(Country = upper(Country)) ~> ModifyColumns1",
				"joinEmpDataDepData sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Column_1 as string,",
				"          Column_2 as string",
				"     ),",
				"     partitionFileNames:['empanddepData'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          {modify Country} = Country,",
				"          depname",
				"     ),",
				"     partitionBy('hash', 1)) ~> OutputData"
			]
		}
	}
}