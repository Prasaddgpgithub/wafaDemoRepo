{
	"name": "TotalempbydepDataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "EmpDatadataset101",
						"type": "DatasetReference"
					},
					"name": "Employees"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DepDataDataset101",
						"type": "DatasetReference"
					},
					"name": "TotalEmpbydep"
				}
			],
			"transformations": [
				{
					"name": "aggregateondep"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Empid as string,",
				"          Name as string,",
				"          Country as string,",
				"          Department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Employees",
				"Employees aggregate(groupBy(Department),",
				"     TotalEmployees = count(Empid)) ~> aggregateondep",
				"aggregateondep sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['totalEmployeesbydep.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          DepID = Department,",
				"          {Total Employees} = TotalEmployees",
				"     ),",
				"     partitionBy('hash', 1)) ~> TotalEmpbydep"
			]
		}
	}
}