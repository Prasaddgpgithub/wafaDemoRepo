{
	"name": "DF_Aggregate_Join",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_EMP_Aggregate",
						"type": "DatasetReference"
					},
					"name": "Employees"
				},
				{
					"dataset": {
						"referenceName": "Ds_DEP10",
						"type": "DatasetReference"
					},
					"name": "Department"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Outputfiles",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "aggregate1"
				},
				{
					"name": "joinondep"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmpID as string,",
				"          Name as string,",
				"          Country as string,",
				"          Dep as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Employees",
				"source(output(",
				"          Dep as string,",
				"          DepName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Department",
				"Employees aggregate(groupBy(Dep),",
				"     EmpID = count(Dep)) ~> aggregate1",
				"aggregate1, Department join(aggregate1@Dep == Department@Dep,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> joinondep",
				"joinondep sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['TotlaEMPbyDepLatest.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          DepName,",
				"          EmpID",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}